{
	"name": "aftim",
	"version": "4.0.0",
	"description": "API de conexion entre las aplicaciones de la suite de administracion y la base de datos madre",
	"main": "./dist/index.js",
	"scripts": {
		"start": "node ./src/dist/index.js",
		"serve": "concurrently \"tsc -w -p ./src/tsconfig.json\" \"nodemon ./src/dist/index.js\" ",
		"deploy": "npm run clean && npm run build && pm2 start ./dist/index.js --name ducen-rest-api",
		"clean": "rimraf ./dist",
		"build": "tsc -p ./src/tsconfig.json",
		"test": "jest --config=./src/jest.config.json ",
		"postinstall": "npm run build"
	},
	"keywords": [
		"API",
		"REST",
		"Typescript",
		"Express",
		"Microservice"
	],
	"author": "Aftim software",
	"license": "ISC",
	"dependencies": {
		"axios": "^0.19.2",
		"bcryptjs": "^2.4.3",
		"cors": "^2.8.5",
		"cross-env": "^5.2.0",
		"dotenv": "^6.2.0",
		"ducenlogger": "^1.3.0",
		"ducentrace": "^1.1.1",
		"express": "^4.16.4",
		"fs-extra": "^7.0.1",
		"jsonwebtoken": "^8.5.1",
		"moment": "^2.24.0",
		"multer": "^1.4.1",
		"mysql2": "^2.1.0",
		"nodemailer": "^6.4.6",
		"rimraf": "^3.0.0",
		"sequelize": "^6.2.3",
		"swagger-ui-express": "^4.1.4"
	},
	"devDependencies": {
		"@types/bcryptjs": "^2.4.2",
		"@types/cors": "^2.8.6",
		"@types/dotenv": "^6.1.1",
		"@types/express": "^4.17.1",
		"@types/fs-extra": "^8.0.0",
		"@types/jest": "^25.1.0",
		"@types/jsonwebtoken": "^8.3.5",
		"@types/multer": "^1.3.10",
		"@types/supertest": "^2.0.8",
		"@types/swagger-ui-express": "^4.1.2",
		"@types/validator": "^13.1.0",
		"concurrently": "^5.0.0",
		"jest": "^25.1.0",
		"nodemon": "^1.18.10",
		"supertest": "^4.0.2",
		"ts-jest": "^25.0.0",
		"typescript": "^3.6.4"
	}
}
