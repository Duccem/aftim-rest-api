{
  "name": "aftim",
  "version": "1.1.0",
  "description": "API de conexion entre las aplicaciones de la suite de administracion y la base de datos madre",
  "main": "index.js",
  "scripts": {
    "api":"node dist/index.js",
    "data": "node data/index.js",
    "auth": "node auth/index.js",
    "file": "node images/index.js",
    "start": "npm run data && npm run auth && npm run file && npm run api",
    "serve": "concurrently \"tsc -w\" \"nodemon dist/index.js && nodemon data/index.js && nodemon auth/index.js && nodemon images/index.js\"",
    "deploy": "npm run clean && npm run build && npm start",
    "clean": "rimraf ./dist",
    "build": "tsc",
    "test": "jest",
    "postinstall": "npm run build"
  },
  "keywords": [
    "API",
    "REST",
    "Typescript",
    "Express",
    "Microservice"
  ],
  "author": "Jose Veliz",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.19.2",
    "bcryptjs": "^2.4.3",
    "chalk": "^3.0.0",
    "cors": "^2.8.5",
    "cross-env": "^5.2.0",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "fs-extra": "^7.0.1",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "multer": "^1.4.1",
    "mysql2": "^2.1.0",
    "nodemailer": "^6.4.6",
    "rimraf": "^3.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/fs-extra": "^8.0.0",
    "@types/jest": "^25.1.0",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/morgan": "^1.7.37",
    "@types/multer": "^1.3.10",
    "@types/supertest": "^2.0.8",
    "concurrently": "^5.0.0",
    "jest": "^25.1.0",
    "nodemon": "^1.18.10",
    "supertest": "^4.0.2",
    "ts-jest": "^25.0.0",
    "typescript": "^3.6.4"
  }
}
